# ==============================
# APP CONFIGURATION
# ==============================
NODE_ENV=development
PORT=4000
CLIENT_URL=http://localhost:5173

# JWT & SECURITY
JWT_SECRET="super_long_random_secret_key_here"
SESSION_SECRET="another_random_secret_key_here"
BCRYPT_SALT_ROUNDS=10

# ==============================
# DATABASE CONFIG
# ==============================
# For local Docker setup
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/arcademmo

# If using Render or Railway, replace with their provided URL
# DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<dbname>

# ==============================
# REDIS CONFIG
# ==============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================
# GAME CONFIG
# ==============================
GAME_WORLD_NAME="EtherealRealms"
TICK_RATE=30
MAX_PLAYERS=500
PLAYER_START_X=150
PLAYER_START_Y=220
SPAWN_RADIUS=300

# ==============================
# LOGGING & DEBUG
# ==============================
LOG_LEVEL=debug
ENABLE_METRICS=true

# ==============================
# ADMIN CONFIG
# ==============================
ADMIN_EMAIL=admin@arcademmo.local
ADMIN_PASSWORD=ChangeThisInProd!

# ==============================
# CDN / ASSETS
# ==============================
ASSET_BASE_URL=http://localhost:4000/assets
SPRITE_SHEET_URL=${ASSET_BASE_URL}/spritesheets/main.json
TILEMAP_URL=${ASSET_BASE_URL}/tilemaps/world1.json

# ==============================
# CLOUD DEPLOYMENT (optional)
# ==============================
# For production
# DATABASE_URL=postgresql://postgres:yourpassword@db:5432/arcademmo
# REDIS_URL=redis://:yourpassword@redis:6379
# CLIENT_URL=https://yourdomain.com
